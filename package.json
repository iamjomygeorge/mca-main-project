{
  "name": "inkling",
  "version": "1.0.0",
  "private": true,
  "author": "Jomy George",
  "description": "The Standard for Digital Literary Assets",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"Backend ,Frontend\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
